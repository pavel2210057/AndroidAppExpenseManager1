<?xml version="1.0" encoding="utf-8"?>


<layout>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_24sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTitle"
                    style="@style/TextViewLargeExtraSemiBoldCommon"
                    android:layout_width="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@color/actionbar"
                    android:gravity="center"
                    android:padding="@dimen/_12sdp"
                    android:text="@string/app_name"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/imgAdd"
                    style="@style/ImageViewButtonMediumCommon"
                    android:src="@drawable/add"
                    android:tint="@color/actionbar"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/actionbar"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etName"
                        style="@style/EditTextLargeRegularCommon"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:hint="@string/name"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/textColorRegular"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp">

                <TextView
                    android:id="@+id/btnCancel"
                    style="@style/TextViewLargeBoldCommon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1.0"
                    android:background="@drawable/rounded_rectangle_actionbar"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="fill_parent"
                    android:background="@color/textColorRegular"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btnOk"
                    style="@style/TextViewLargeBoldCommon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1.0"
                    android:background="@drawable/rounded_rectangle_actionbar"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/apply"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

</layout>