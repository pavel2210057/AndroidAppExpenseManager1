<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_24sdp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                style="@style/TextViewLargeExtraSemiBoldCommon"
                android:layout_width="fill_parent"
                android:background="@color/actionbar"
                android:gravity="center"
                android:padding="@dimen/_12sdp"
                android:text="@string/app_name"
                android:textColor="@color/white" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/actionbar"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtDec"
                style="@style/TextViewMediumRegularCommon"
                android:layout_width="fill_parent"
                android:layout_margin="@dimen/_16sdp"
                android:ellipsize="end"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/textColorRegular" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/textColorRegular"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp">

                <TextView
                    android:id="@+id/btnCancel"
                    style="@style/TextViewLargeBoldCommon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1.0"
                    android:background="@drawable/rounded_rectangle_actionbar"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="fill_parent"
                    android:background="@color/textColorRegular"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btnOk"
                    style="@style/TextViewLargeBoldCommon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1.0"
                    android:background="@drawable/rounded_rectangle_actionbar"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/ok"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</layout>