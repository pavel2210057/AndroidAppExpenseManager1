<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4.0dip"
    app:cardCornerRadius="8.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:text="@string/app_name"
            android:textColor="@color/addMobTextColor"
            android:textSize="18.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDesc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:padding="8.0dip" />

        <TextView
            android:id="@+id/txtDesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.0dip"
            android:textColor="@color/addMobTextColor"
            android:textSize="18.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDesc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:padding="8.0dip" />

        <TextView
            android:id="@+id/txtprivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.0dip"
            android:textColor="@color/addMobTextColor" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radioPersonalized">

            <RadioButton
                android:id="@+id/radioPersonalized"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4.0dip"
                android:background="@drawable/rounded_line"
                android:padding="12.0dip"
                android:buttonTint="@color/primey"
                android:text="@string/personalized"
                android:textColor="@color/addMobTextColor"
                android:theme="@style/AppTheme.Dialog.Alert.AddMob" />

            <RadioButton
                android:id="@+id/radioNonPersonalized"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primey"
                android:layout_margin="4.0dip"
                android:background="@drawable/rounded_line"
                android:checked="false"
                android:padding="12.0dip"
                android:text="@string/non_personalized"
                android:textColor="@color/addMobTextColor"
                android:theme="@style/AppTheme.Dialog.Alert.AddMob" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="10.0dip">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="42.0dip"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16.0dip"
                android:background="@drawable/btn_selector_rounded_actionbar"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16.0dip"
                android:paddingStart="16.0dip"
                android:paddingEnd="16.0dip" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="42.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16.0dip"
                android:background="@drawable/btn_selector_rounded_actionbar"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:paddingEnd="16.0dip"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16.0dip"
                android:paddingStart="16.0dip" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>