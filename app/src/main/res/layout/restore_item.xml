<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <ImageView
            style="@style/ImageViewButtonSmallCommon"
            android:padding="4dp"
            android:src="@drawable/database" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                style="@style/TextViewMediumSemiBoldCommon"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="txtName" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/txtDate"
                    style="@style/TextViewSmallRegularCommon"
                    android:layout_marginRight="16dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="txtDate" />

                <TextView
                    android:id="@+id/txtSize"
                    style="@style/TextViewSmallRegularCommon"
                    android:ellipsize="end"
                    android:fontFamily="@font/semibold"
                    android:singleLine="true"
                    android:text="txtSize"
                    android:textColor="@color/textColorBold" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgRestore"
            style="@style/ImageViewButtonSmallCommon"
            android:padding="4dp"
            android:src="@drawable/restore"
            android:tint="@color/blue"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgDelete"
            style="@style/ImageViewButtonSmallCommon"
            android:padding="4dp"
            android:src="@drawable/delete"
            android:tint="@color/red" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="4dp"
        android:background="@color/divider" />
</LinearLayout>
